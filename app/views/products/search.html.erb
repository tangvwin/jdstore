






             <div class="col-md-12">

               <% if @products.blank?%>
                 <br>
                 <h3 class="text-center">
                   Opps! No products matched yet, please try again.
                 </h3>
               <% else %>
                 <h3 class="text-center" style="margin-top: 30px;">共找到 <%= @products.count %> 个产品</h3>
                 <hr />

                 <table class="table table-boldered">
                   <thead>
                     <tr>
                       <td>
                         商品名称
                       </td>
                       <td>
                         商品简介
                       </td>

                       <td>
                         上架时间
                       </td>
                     </tr>
                   </thead>
                   <tbody>


                   <% @products.each do |product| %>
                   <tr>
                     <td>
                       <%= link_to(product.title, product_path(product))%>
                     </td>
                     <td>
                       <%= product.description%>
                     </td>

                     <td>
                       <%=product.created_at %>
                     </td>
                   </tr>
                   <% end %>
                   </tbody>
                  </table>

                  <div class="text-center">
                 <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
                 </div>

               <% end %>
             </div>

<div class="container">
  <h2 class="text-center">购物车</h2>


    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>

                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                  <% current_cart.cart_items.each do |cart_item| %>

                    <tr>
                        <td class="col-sm-8 col-md-6">
                        <div class="media">
                          <%= link_to product_path(cart_item.product) do %>
                          <% if cart_item.product.image.present? %>
                          <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                          <% else %>
                          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                            <% end %>
                          <% end %>
                          <div class="media-body">

                              <h5 class="media-heading"><a href="#">  <%= link_to(cart_item.product.title, product_path(cart_item.product))%></a></h5>
                                <!-- <span>Status: </span><span class="text-success"><strong>In Stock</strong></span>  -->
                            </div>
                        </div>
                      </td>




                        <td class="col-sm-2 col-md-2">
                        <!-- <input type="email" class="form-control" id="exampleInputEmail1" value="3"> -->
                        <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
                        <%= f.select :quantity, 1..cart_item.product.quantity %>
                        <%= f.submit "更新", data: { disable_with: "Submiting..."} %>
                        <% end %>
                        </td>
                        <% if cart_item.product.discount.present? %>
                        <td class="col-sm-1 col-md-1 text-center"><strong><%= cart_item.product.price * cart_item.product.discount / 100 %></strong></td>
                      <% else %>
                        <td class="col-sm-1 col-md-1 text-center"><strong><%= cart_item.product.price %></strong></td>
                      <% end %>
                        <!-- <td class="col-sm-1 col-md-1 text-center"><strong>$4.87</strong></td> -->
                        <% if cart_item.product.discount.present? %>
                        <td class="col-sm-1 col-md-1 text-center"><strong><%=  cart_item.product.price * cart_item.product.discount / 100 * cart_item.quantity %></strong></td>
                        <% else %>
                        <td class="col-sm-1 col-md-1 text-center"><strong><%= cart_item.quantity * cart_item.product.price%></strong></td>
                        <% end %>


                        <td class="col-sm-1 col-md-1">
                        <!-- <%= link_to cart_item_path(cart_item.product_id),data: {confirm: "你要删除这个商品吗？"} ,method: :delete do%> -->
                          <!-- <i class="fa fa-trash"></i> -->
                        <!-- <% end %> -->
                        <%= link_to "Remove", cart_item_path(cart_item.product_id),
                        method: :delete ,data: {confirm: "您确定要删除这个商品吗？"},
                        class: "fa fa-trash btn btn-sm btn-danger"%>
                      </td>

                        <!-- <td class="col-sm-1 col-md-1">
                        <button type="button" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove"></span> Remove
                        </button></td> -->
                    </tr>


                    <% end %>

                </tbody>
                <tfoot>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                          <h3>Total</h3>
                        </td>
                        <td class="text-right"><h3><%= render_cart_total_price(current_cart) %><strong>RMB</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>
                          <%= link_to("Continue Shopping",products_path, class: "glyphicon glyphicon-shopping-cart btn btn-default")%>

                        <!-- <button type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                        </button> -->
                      </td>
                        <td>
                          <%= link_to("Checkouts",checkout_carts_path, method: :post, class: "glyphicon glyphicon-play btn  btn-success pull-right")%>
                        <!-- <button type="button" class="btn btn-success">
                            Checkout <span class="glyphicon glyphicon-play"></span>
                        </button> -->
                      </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

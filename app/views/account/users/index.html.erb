<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading text-center">
      <h3>用户信息</h3>
    </div>
    <div class="panel-footer">
      <table class="table table-boldered">
          <thead>
              <tr>
                  <td>用户名</td>
                  <td>用户头像</td>
                  <td>注册邮箱</td>
              </tr>

          </thead>
          <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td> <%= link_to(current_user.display_name, edit_account_user_path(user)) %></td>
                  <td>

                   <% if current_user.avatar.present? %>
                      <%= image_tag(current_user.avatar.thumb.url,style:"border-radius:50%;width:50px;height:50px;",class:"thumbnail")  %>
                       <!-- 用户可以自选头像 -->
                    <% else %>
                      <%= image_tag("http://ww1.sinaimg.cn/large/006tNbRwgy1ffzxufbo0lj3069069t8o.jpg",class:"thumbnail",style:"width:60px;height:60px;border-radius:50%;") %>
                        <!-- 定义用户未选择头像时的默认头像 -->
                    <% end %>

                  </td>
                  <td> <%= current_user.email %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<h2>Product list</h2>

<div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm")%>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Serial No.</th>
            <th width="220">Product Pic</th>
            <th>Name</th>
            <th>单价</th>
            <th width="100">Options</th>

        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.id %></td>
            <td><%= link_to product_path(product) do %>
                <% if product.photos.present? %>
                <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
            <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
                <% end %>
            </td>

            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td class="text-center"><%= link_to("Edit", edit_admin_product_path(product),class: "fa fa-pencil btn  btn-success")%>
                <%= link_to("",move_up_admin_product_path(product), method: :patch, class:"fa fa-arrow-up btn btn-xs btn-info" )%>
                <%= link_to("",move_down_admin_product_path(product),method: :patch , class:"fa fa-arrow-down btn btn-xs btn-info" )%>

            </td>

        </tr>
        <% end %>
    </tbody>
</table>
<div class="text-center">
    <%= will_paginate @product, renderer: BootstrapPagination::Rails %>
</div>
